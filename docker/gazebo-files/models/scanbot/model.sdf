<?xml version='1.0'?>
<sdf version='1.7'>
  <model name='scanbot'>
<!--
INERTIA TENSOR FORMULAS:
box:
    ixx=(1/12)*m*((h^2)+(d^2))
    iyy=(1/12)*m*((w^2)+(h^2))
    izz=(1/12)*m*((w^2)+(d^2))
    ixy=0
    ixz=0
    iyz=0
    iyx=0
    ixz=0
    izy=0

cylinder:
    ixx=(1/12)*m*((3*(r^2))+(h^2))
    iyy=(1/12)*m*((3*(r^2))+(h^2))
    izz=(1/2)*m*(r^2)
    ixy=0
    ixz=0
    iyz=0
    iyx=0
    ixz=0
    izy=0
-->

    <static>false</static>
    <pose>0 0 -0.05 0 0 0</pose>

    <link name='chassis'>
      <pose>0 0 0.1 0 0 0</pose>

      <inertial>
        <mass>0.5</mass>
        <inertia>
          <iyy>0.00124270833</iyy>
          <ixx>0.00059270833</ixx>
          <izz>0.00148333333</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>

      <collision name='base_collision'>
        <geometry>
          <box>
            <size>0.160 0.100 0.065</size>
          </box>
        </geometry>
      </collision>

      <visual name='base_visual'>
        <geometry>
          <box>
            <size>0.160 0.100 0.065</size>
          </box>
        </geometry>
      </visual>

